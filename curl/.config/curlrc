# vim: ft=properties
# Follow HTTP redirects.
#location

# When following a redirect, automatically set the previous URL as referer.
#referer = ";auto"

# Wait 120 seconds before timing out.
#connect-timeout = 120

# Limit the time (in seconds) the whole operation is allowed to take
# (prevent cURL from hanging due to slow networks or links going down).
#max-time = 120
